@{
}
<h1>Dodaj rezerwacje</h1>
<form asp-controller="Reservation" asp-action="CreateApi" method="post">
    <div class="mb-3">
        <label asp-for="HotelId">Hotel</label>
        <select class="form-control" asp-for="HotelId" ></select>
    </div>
    <div class="mb-3">
        <label asp-for="Data">Data</label>
        <input class="form-control" asp-for="Data" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TownId">Miasto</label>
        <input class="form-control" asp-for="TownId" />
        <span asp-validation-for="TownId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Adres">Adres</label>
        <input class="form-control" asp-for="Adres" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Pokoj">Pokoj</label>
        <select class="form-control" asp-for="Pokoj" asp-items="@Html.GetEnumSelectList<Rooms>()"></select>
        <span asp-validation-for="Pokoj" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Wlasciciel">Właściciel</label>
        <input class="form-control" asp-for="Wlasciciel" />
        <span asp-validation-for="Wlasciciel" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Cena">Cena</label>
        <input class="form-control" asp-for="Cena" />
        <span asp-validation-for="Cena" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a class="btn btn-primary" asp-controler="Reservation" asp-action="Index">Powrót</a>
    </div>
</form>


@section Scripts {
    <script>
        let select = document.getElementById("HotelId");
        let filter = document.getElementById("filter");
        filter.onchange = function (e) {
            if (filter.value.lenght == 0) {
                return;
            }
            fetch(`/api/hotels?filter=${filter.value}`)
                .then(response => {
                    if (response.ok) {
                        return response.json()
                    }
                    throw "no ok, status " + response.status;
                })
                .then(json => {
                    select.innerHTML = '';
                    for (let item of json) {
                        let option = document.createElement('option');
                        option.setAttribute('value', item.id);
                        option.innerText = item.title;
                        select.appendChild(option);
                    }
                })
                .catch(e => {
                    console.log('cant get data from api', e);
                });
        };
    </script>
}